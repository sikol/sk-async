#ifndef SK_CIO_WAIT_HXX_INCLUDED
#define SK_CIO_WAIT_HXX_INCLUDED

#include <sk/cio/task.hxx>

namespace sk::cio {

    struct wait_promise {
        std::promise<void> promise;

        auto get_return_object()
        {
            return std::coroutine_handle<wait_promise>::from_promise(*this);
        }

        std::suspend_always initial_suspend()
        {
            return {};
        }

        struct final_awaiter {
            bool await_ready() noexcept
            {
                return false;
            }

            void await_resume() noexcept {}

            void await_suspend(std::coroutine_handle<wait_promise> h) noexcept
            {
                h.promise().promise.set_value();
            }
        };

        final_awaiter final_suspend() noexcept
        {
            return {};
        }

        void unhandled_exception()
        {
            throw;
        }

        void return_void() noexcept {}
    };

    struct wait_task {
        using promise_type = wait_promise;
        std::coroutine_handle<wait_promise> coro_handle;

        wait_task(std::coroutine_handle<wait_promise> coro_handle_)
            : coro_handle(coro_handle_)
        {
        }

        wait_task(wait_task const &) = delete;
        wait_task &operator=(wait_task const &) = delete;
        wait_task &operator=(wait_task &&other) = delete;

        wait_task(wait_task &&other) noexcept
            : coro_handle(std::exchange(other.coro_handle, {}))
        {
        }

        ~wait_task()
        {
            if (coro_handle)
                coro_handle.destroy();
        }

        void start()
        {
            coro_handle.resume();
        }
    };

    template <typename T>
    auto _internal_wait(task<T> const &task_, T *v) -> wait_task
    {
        *v = co_await task_;
    }

    inline auto _internal_wait(task<void> const &task_) -> wait_task
    {
        co_await task_;
    }

    template <typename T>
    T wait(task<T> const &task_)
    {
        T ret;

        auto waitable = _internal_wait(task_, &ret);

        auto future = waitable.coro_handle.promise().promise.get_future();
        waitable.start();
        future.wait();

        return std::move(ret);
    }

    template <>
    inline void wait(task<void> const &task_)
    {
        auto waitable = _internal_wait(task_);
        auto future = waitable.coro_handle.promise().promise.get_future();
        waitable.start();
        future.wait();
    }

} // namespace sk::cio

#endif // SK_CIO_WAIT_HXX_INCLUDED
